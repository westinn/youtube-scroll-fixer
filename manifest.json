{
  "name": "Youtube Scroll Fixer",
  "version": "1.0",
  "description": "Fixes the sticky search bar on Youtube.",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "css": [
        "youtube-scroll-fixer.css"
      ]
    }
  ],
  "page_action": {
    "default_icon": {
      "16": "./icons/16.png",
      "32": "./icons/32.png",
      "48": "./icons/48.png",
      "128": "./icons/128.png"
    }
  },
  "icons": {
    "16": "./icons/16.png",
    "48": "./icons/48.png",
    "128": "./icons/128.png"
  }
}